@using FurnitureAssemblyContracts.ViewModels
@model (List<MessageInfoViewModel> list, bool isNext, int page)
@{
    ViewData["Title"] = "MessageInfo";
}

<div class="text-center">
    <h1 class="display-4">Письма</h1>
</div>
<div class="text-center">
    @{
        if (Model.list == null)
        {
            <h3 class="display-4">Авторизируйтесь</h3>
            return;
        }
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Отправитель
                    </th>
                    <th>
                        Дата письма
                    </th>
                    <th>
                        Заголовoк
                    </th>
                    <th>
                        Текст
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.list)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SenderName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateDelivery)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Subject)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Body)
                        </td>                        
                    </tr>
                }
            </tbody>
        </table>
    }
    <div style="display: flex; justify-content: space-around;">
        @{
            if ((Model.page - 1) >= 1)
            {
                <a asp-action="MessageInfo" asp-route-page="@(Model.page-1)">&#129152;</a>
            }
            <span>Страница | @(Model.page) |</span>
            if (Model.isNext)
            {
                <a asp-action="MessageInfo" asp-route-page="@(Model.page+1)">&#129154;</a>
            }
        }
    </div>
</div> 